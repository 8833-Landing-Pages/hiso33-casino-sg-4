---
const redirectUrl = 'https://www.hiso33play.com/en-sg/register/?affId=234';
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex, nofollow">
    <title>Redirecting...</title>
  </head>
  <body style="margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;display:flex;align-items:center;justify-content:center;min-height:100vh;text-align:center;padding:32px;">
    <div>
      <h1 style="margin:0 0 12px;font-size:2rem;">One moment...</h1>
      <p style="margin:0 0 16px;font-size:1.1rem;">We are taking you to the registration page.</p>
      <p style="margin:0;font-size:0.95rem;">If you are not redirected automatically, <a href={redirectUrl}>click here</a>.</p>
    </div>
    <script>
      const redirectUrl = 'https://www.hiso33play.com/en-sg/register/?affId=234';
      setTimeout(() => {
        window.location.href = redirectUrl;
      }, 2000);
    </script>
  </body>
</html>
